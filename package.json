{
  "name": "@folio/directory",
  "version": "1.1.0",
  "description": "Interact with the library services directory",
  "main": "src/index.js",
  "repository": "",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=10.0.0"
  },
  "scripts": {
    "start": "stripes serve",
    "build": "stripes build --output ./output",
    "test-int": "stripes test nightmare --run demo --show",
    "test": "stripes test karma",
    "lint": "eslint ."
  },
  "devDependencies": {
    "@bigtest/interactor": "^0.8.1",
    "@bigtest/mirage": "^0.0.1",
    "@bigtest/mocha": "^0.5.1",
    "@folio/eslint-config-stripes": "^4.1.1",
    "@folio/stripes": "^3.0.0",
    "@folio/stripes-cli": "^1.10.0",
    "babel-eslint": "^9.0.0",
    "chai": "^4.2.0",
    "eslint": "^5.6.0",
    "mocha": "^5.2.0",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-intl": "^2.9.0",
    "react-router-dom": "^4.1.1",
    "sinon": "^6.3.4"
  },
  "dependencies": {
    "@folio/address-plugin-generic": "^1.0.0",
    "@folio/address-plugin-north-america": "^1.0.0",
    "@folio/address-plugin-british-isles": "^1.0.0",
    "@folio/address-utils": "^1.0.0",
    "@folio/react-intl-safe-html": "^1.0.3",
    "@folio/stripes-erm-components": "^2.0.0",
    "compose-function": "^3.0.3",
    "final-form-arrays": "^3.0.2",
    "final-form-set-field-data": "^1.0.2",
    "lodash": "^4.17.4",
    "prop-types": "^15.6.0",
    "react-final-form": "^6.4.0",
    "react-final-form-arrays": "^3.1.1",
    "uuid": "^7.0.3"
  },
  "peerDependencies": {
    "@folio/stripes": "^3.0.0",
    "react": "*",
    "react-intl": "^2.9.0",
    "react-router-dom": "^4.1.1 || ^5.0.0"
  },
  "stripes": {
    "actsAs": [
      "app",
      "settings"
    ],
    "displayName": "ui-directory.meta.title",
    "route": "/directory",
    "queryResource": "query",
    "stripesDeps": [
      "@folio/stripes-erm-components",
      "@folio/address-plugin-generic",
      "@folio/address-plugin-north-america",
      "@folio/address-plugin-british-isles",
      "@folio/address-utils"
    ],
    "icons": [
      {
        "name": "app",
        "alt": "Create, view and manage directory entries",
        "title": "Directory"
      }
    ],
    "okapiInterfaces": {
      "directory": "1.0",
      "tags": "1.0"
    },
    "permissionSets": [
      {
        "permissionName": "module.directory.enabled",
        "displayName": "UI: Directory module is enabled",
        "subPermissions": [
          "configuration.entries.collection.get"
        ],
        "visible": true
      },
      {
        "permissionName": "settings.directory.enabled",
        "displayName": "Settings (directory): display list of settings pages",
        "subPermissions": [
          "settings.enabled"
        ],
        "visible": true
      },
      {
        "permissionName": "directory.edit-self",
        "displayName": "Directory: edit the directory entry of the present institution",
        "subPermissions": [
          "module.directory.enabled"
        ],
        "visible": true
      },
      {
        "permissionName": "directory.edit-all",
        "displayName": "Directory: edit all directory entries",
        "subPermissions": [
          "module.directory.enabled"
        ],
        "visible": true
      }
    ],
    "ignoredComment": "The directory.edit-* permissions are enforced on the UI side only, as there are presently no server-side permissions in mod-directory/service/src/main/okapi/ModuleDescriptor-template.json to include"
  }
}
