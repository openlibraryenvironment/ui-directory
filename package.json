{
  "name": "@folio/directory",
  "version": "1.1.0",
  "description": "Interact with the library services directory",
  "main": "src/index.js",
  "repository": "",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "start": "stripes serve",
    "build": "stripes build --output ./output",
    "test-int": "stripes test nightmare --run demo --show",
    "test": "stripes test karma",
    "lint": "eslint ."
  },
  "devDependencies": {
    "@bigtest/interactor": "^0.8.1",
    "@bigtest/mirage": "^0.0.1",
    "@bigtest/mocha": "^0.5.1",
    "@folio/eslint-config-stripes": "^4.1.1",
    "@folio/stripes": "^2.7.4",
    "@folio/stripes-cli": "^1.10.0",
    "babel-eslint": "^9.0.0",
    "babel-polyfill": "^6.26.0",
    "chai": "^4.2.0",
    "eslint": "^5.6.0",
    "mocha": "^5.2.0",
    "sinon": "^6.3.4"
  },
  "dependencies": {
    "@folio/stripes-erm-components": "^2.0.0",
    "@folio/stripes-smart-components": "^2.9.0",
    "lodash": "^4.17.4",
    "prop-types": "^15.6.0",
    "react-final-form": "^6.3.0",
    "final-form-set-field-data": "^1.0.2",
    "react-intl": "^2.4.0",
    "react-router-dom": "^4.1.1",
    "redux-form": "^7.0.3"
  },
  "peerDependencies": {
    "@folio/stripes": "^2.7.4",
    "react": "*"
  },
  "stripes": {
    "actsAs": ["app", "settings"],
    "displayName": "ui-directory.meta.title",
    "route": "/directory",
    "queryResource": "query",
    "icons": [
      {
        "name": "app",
        "alt": "Create, view and manage directory entries",
        "title": "Directory"
      }
    ],
    "okapiInterfaces": {
      "directory": "1.0"
    },
    "permissionSets": [
      {
        "permissionName": "module.directory.enabled",
        "displayName": "UI: Directory module is enabled",
        "visible": true
      },
      {
        "permissionName": "settings.directory.enabled",
        "displayName": "Settings (directory): display list of settings pages",
        "subPermissions": [
          "settings.enabled"
        ],
        "visible": true
      }
    ]
  }
}
